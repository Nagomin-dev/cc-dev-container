{
  "mcpServers": {
    "filesystem": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "/workspace"],
      "config": {
        "allowedPaths": ["/workspace"],
        "disallowedOperations": ["write", "delete", "rename"],
        "allowSymlinks": false
      }
    }
  }
}
